<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wellplayed">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wellplayed"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wellplayed_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WellPlayed"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".LogosAdpater"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Logos"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addJuego"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".UnirseEquipoAdapter"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".unirseEquipo"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Informacion"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Cuenta"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".crearEquipo"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".JuegosAdapter"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".JuegosDetalle"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".perfilFragment"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Registro"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".EquipoDetalle"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>