<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrisApp"
    android:foregroundTint="#070707"
    tools:context=".Cuenta"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="116dp">

    <EditText
        android:id="@+id/txtPasswordUPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPassword" />

    <EditText
        android:id="@+id/txtPasswordUPD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPassword2" />

    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lblPassword"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuarioUPD" />

    <TextView
        android:id="@+id/lblPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lblPassword2"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordUPD" />

    <ImageView
        android:id="@+id/imgBannerUser"
        android:layout_width="507dp"
        android:layout_height="157dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/fondobanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogoUser"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="94dp"
        android:src="@drawable/wellplayed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBannerUser" />

    <TextView
        android:id="@+id/lblNombreUsuarioUPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/lblNombreUsuarioUPD"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoUser" />

    <EditText
        android:id="@+id/txtNombreUsuarioUPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNombreUsuarioUPD" />


    <ImageButton
        android:id="@+id/btnEditarLogoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="cambiarLogoUser"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogoUser"
        app:layout_constraintEnd_toEndOf="@+id/imgLogoUser"
        app:layout_constraintStart_toStartOf="@+id/imgLogoUser"
        app:layout_constraintTop_toTopOf="@+id/imgLogoUser"
        app:srcCompat="@drawable/editarlogousuario" />

    <ImageButton
        android:id="@+id/btnEditarBannerUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:onClick="cambiarBannerUser"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBannerUser"
        app:srcCompat="@drawable/iconofondo" />

    <Button
        android:id="@+id/btnActualizarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/AmarilloApp"
        android:onClick="actualizarPerfil"
        android:text="@string/actualizar_perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>