<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/menuHamburguesa">

    <TextView
        android:id="@+id/lblNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/GrisApp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgViewUsuario"
        app:layout_constraintTop_toTopOf="@+id/imgViewUsuario" />

    <TextView
        android:id="@+id/lblState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:text="Online"
        android:textColor="@color/GrisApp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgViewState"
        app:layout_constraintTop_toBottomOf="@+id/lblNombreUsuario" />

    <ImageView
        android:id="@+id/imgViewUsuario"
        android:layout_width="118dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imgViewState"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNombreUsuario"
        app:srcCompat="@drawable/circle" />
</androidx.constraintlayout.widget.ConstraintLayout>